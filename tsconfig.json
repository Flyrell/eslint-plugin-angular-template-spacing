{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2021"],
    "paths": {
      "@plugin/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
