{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2021"],
    "types": ["node"],
    "paths": {
      "@plugin/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
